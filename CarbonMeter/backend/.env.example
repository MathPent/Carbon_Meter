PORT=5000

# MongoDB Atlas - Cloud Database
# Replace <username>, <password> with your MongoDB Atlas credentials
# URL format: mongodb+srv://<username>:<password>@carbonmeter-cluster.cjgdnje.mongodb.net/carbonmeter
# DO NOT hardcode or commit credentials - use environment variables only
MONGODB_URI=mongodb+srv://<username>:<password>@carbonmeter-cluster.cjgdnje.mongodb.net/carbonmeter

JWT_SECRET=your_super_secret_jwt_key_change_in_production_12345
NODE_ENV=development
GOOGLE_CLIENT_ID=your_google_client_id_here

# Email OTP Configuration (Gmail)
# NOTE: Use Gmail App Password (not your regular password)
# Steps: 1. Enable 2-Factor Authentication on Gmail
#        2. Generate App Password from: https://myaccount.google.com/apppasswords
#        3. Paste the 16-character password below (remove spaces)
EMAIL=your_gmail@gmail.com
EMAIL_PASS=your_16_char_app_password_here

