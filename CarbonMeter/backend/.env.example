# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Atlas - Cloud Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/carbonmeter?retryWrites=true&w=majority

# JWT Secret (generate a secure random string)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_12345

# ML Service URLs (Production)
ML_INDIVIDUAL_URL=https://carbonmeter-ml-individual.onrender.com
ML_ORG_URL=https://carbonmeter-ml-org.onrender.com

# Email Configuration (Gmail)
# NOTE: Use Gmail App Password (not your regular password)
EMAIL=your_gmail@gmail.com
EMAIL_PASS=your_16_char_app_password_here

# CORS Configuration
FRONTEND_URL=https://carbonmeter.netlify.app

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id_here


